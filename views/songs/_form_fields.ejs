<link rel="stylesheet" type="text/css" href="style.css">
<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= song.title %>">
</div>

<div>
  <label>Artist</label>
  <select name="artist">
  <% artists.forEach(artist => { %>
    <% if (artist.id === song.artist) { %>
      <option selected label="<%= artist.name %>" value="<%= artist.id %>">
    <% } else { %>
      <option label="<%= artist.name %>" value="<%= artist.id %>">
    <% } %>
  <% }) %>
  </select>
</div>

<div>
  <label>Release Date</label>
  <input type="date" name="releaseDate"
        value="<%= song.releaseDate == null ? '' : song.releaseDate.toISOString().split('T')[0] %>">
</div>

<div>
  <label>Genre</label>
  <textarea name="genre"><%= song.genre %></textarea>
</div>